{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2015", "dom"],
    "types": ["vuetify", "node", "webpack-env"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuetify/types",
      "./src/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true
  }
}